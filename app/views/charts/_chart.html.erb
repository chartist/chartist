<%= graphic_of(chart).html_safe %>

<p>
	widget: <input name="widget" type="text" value="<iframe src='<%= chart_widget_url(chart) %>' frameBorder='0'></iframe>">
</p>
<% if chart.dashboards.any? %>
  <% chart.dashboards.each do |dashboard| %>
    <%= link_to dashboard.title, dashboard_path(dashboard.id) %>
  <% end %>
<% end %>
<div class="chart-author"><%= chart.user.email if chart.user %></div>
