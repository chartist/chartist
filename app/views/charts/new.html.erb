<div id="example" class="handsontable"></div><br>
<a href='#' id='download'>Download</a><br>
<!-- multistep form -->
<%= form_for @chart, html: { multipart: true, id: 'msform' } do |f| %>
  <!-- progressbar -->
  <ul id="progressbar">
    <li class="active">Start Creating</li>
    <li>Choose Design</li>
    <li>Choose Colour</li>
    <li>Share your Chart</li>
  </ul>
  <!-- fieldsets -->
  <fieldset>
    <h2 class="fs-title">Start Creating</h2>
    <div class="form-group">
      <%= f.label :name, 'Add a title' %>
      <%= f.text_field :name %>
      <br>
      <%= f.label :description, 'Add a description' %>
      <%= f.text_field :description %>
      <br>
      <%= f.label :dashboard_titles, 'Create Dashboard' %>
      <%= f.text_field :dashboard_titles %>
      <br>
      <%= f.file_field :csv %>
      <input type="button" name="next" class="next action-button" value="Next" />
    </fieldset>
    <fieldset>
      <h2 class="fs-title">Choose a chart type</h2>
      <div class="form-group">
        <%= f.radio_button :chart_type, :pie_chart %>
        <%= f.label :chart_type, 'Pie chart', value: :pie_chart %>
        <%= f.radio_button :chart_type, :line_chart %>
        <%= f.label :chart_type, 'Line chart', value: :line_chart %>
        <%= f.radio_button :chart_type, :col_chart %>
        <%= f.label :chart_type, 'Column chart', value: :col_chart %>
        <%= f.radio_button :chart_type, :bar_chart %>
        <%= f.label :chart_type, 'Bar chart', value: :bar_chart %>
      </div>
      <input type="button" name="previous" class="previous action-button" value="Previous" />
      <input type="button" name="next" class="next action-button" value="Next" />
    </fieldset>
    <fieldset>
      <h2 class="fs-title">Choose Colour</h2>
      <h3 class="fs-subtitle">What colour are you feeling today?</h3>
      <div class ="form-group">
        <%= f.radio_button :colorscheme, :default %>
        <%= f.label :colorscheme, 'Default', value: :default %>
        <%= f.radio_button :colorscheme, :hockeytown %>
        <%= f.label :colorscheme, 'hockeytown', value: :hockeytown %>
        <input type="button" name="previous" class="previous action-button" value="Previous" />
        <input type="button" name="next" class="next action-button" value="Next" />
      </fieldset>
      <fieldset>
        <h2 class="fs-title">Share your Chart</h2>
        <h3 class="fs-subtitle">Share</h3>
        <input type="text" name="twitter" placeholder="Twitter" />
        <input type="button" name="previous" class="previous action-button" value="Previous" />
        <%= f.submit 'Generate', class: 'action-button' %>
      </fieldset>
    <% end %>
