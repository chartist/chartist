<!-- To be taken off -->
<!-- multistep form -->
<%= javascript_tag "var dashboards = #{current_user.dashboards.map(&:title).to_json}" %>
<%= form_for @chart, class: "form-vertical", html: { multipart: true, id: 'msform' } do |f| %>
  <!-- progressbar -->
  <ul id="progressbar">
    <li class="active">Start Creating</li>
    <li>Choose Design</li>
    <li>Choose Colour</li>
    <li>Pick a board</li>
  </ul>
  <!-- fieldsets -->
  <fieldset>
    <h2 class="fs-title">Import Sources</h2>
    <div class="panel panel-default">
      <div class="panel-body">
        <button id="modal-btn-2" class="btn btn-primary btn-lg" method="get">
          Upload a file
        </button>
        <div class="modal fade" id="myModal-2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">File upload</h4>
              </div>
              <div class="modal-body">
                <div class="row">
                  <div class="col-md-2 col-md-offset-1">
                    <div class="input-group">
                      <span class="input-group-btn">
                        <span class="btn btn-default btn-file">
                          Browse
                          <%= f.file_field :csv %>
                        </span>
                      </span>
                      <input type="text" class="form-control" readonly="">
                    </div>
                  </div></div>
              </div>
              <div class="modal-footer">
                <button id='ready' type="button" class="btn btn-primary">Ready</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <button id="modal-btn" class="btn btn-primary btn-lg" method="get">
          Enter data manually
        </button>
      </div>
    </div>
    <input type="button" name="next" id="first-next" class="next action-button" value="Next" />
  </fieldset>
  <fieldset>
    <h2 class="fs-title">Choose a chart type</h2>
    <div class="form-group">
      <label class="form-charts">
        <%= f.radio_button :chart_type, :pie_chart %>
        <%= image_tag("charts/piechart.png", class: "image-col-2") %>
      </label>
      <label class="form-charts">
        <%= f.radio_button :chart_type, :line_chart %>
        <%= image_tag("charts/linechart.png", class: "image-col-2") %>
      </label>
      <label class="form-charts">
        <%= f.radio_button :chart_type, :col_chart %>
        <%= image_tag("charts/columnchart.png", class: "image-col-2") %>
      </label>
      <label class="form-charts">
        <%= f.radio_button :chart_type, :bar_chart %>
        <%= image_tag("charts/barchart.png", class: "image-col-2") %>
      </label>
    </div>
    <input type="button" name="previous" class="previous action-button" value="Previous" />
    <input type="button" name="next" class="next action-button" value="Next" />
  </fieldset>
  <fieldset>
    <h2 class="fs-title">What colour are you feeling today?</h2>
    <div class ="form-group">
      <label class="charts-theme">
        <%= f.radio_button :colorscheme, :spring %>
        <%= image_tag("charts/spring.png", class: "image-col-2") %>
      </label>
      <label class="charts-theme">
        <%= f.radio_button :colorscheme, :summer %>
        <%= image_tag("charts/summer.png", class: "image-col-2") %>
      </label>
      <label class="charts-theme">
        <%= f.radio_button :colorscheme, :autumn %>
        <%= image_tag("charts/autumn.png", class: "image-col-2") %>
      </label>
      <label class="charts-theme">
        <%= f.radio_button :colorscheme, :winter %>
        <%= image_tag("charts/winter.png", class: "image-col-2") %>
      </label>
    </div>
    <input type="button" name="previous" class="previous action-button" value="Previous" />
    <input type="button" name="next" class="next action-button" value="Next" />
  </fieldset>
  <fieldset>
    <div class="form-group">
    <%= f.label :name, "Add a Title" %>
    <%= f.text_field :name, :autofocus => true, :placeholder => "My New Awesome Chart", class: "form-control" %>
    <br>
    <%= f.label :description, 'Add a description' %>
    <%= f.text_field :description, class: 'form-control' %>
    <br>
    <br>
    <%= f.label :dashboard_titles, "Create New Board" %>
    <%= f.text_field :dashboard_titles, class: 'form-control dashboards' %>
    <br />
    <%= f.hidden_field :table_data, value: "xxxx", class: "hidden-field" %>
    <input type="button" name="previous" class="previous action-button" value="Previous" />
    <%= f.submit "Create", class: "action-button" %>
  </div>
  </fieldset>
<% end %>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Manual data entry</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-2 col-md-offset-1">
            <div id="example" class="handsontable"></div><br>
          </div></div>
      </div>
      <div class="modal-footer">
        <button id='download' type="button" class="btn btn-primary">Ready</button>
      </div>
    </div>
  </div>
</div>
