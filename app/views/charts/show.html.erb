<div class="panel panel-primary chart_container">

    <div class = "panel-heading">
      <%= @chart.name %>
    </div>

    <div class = "panel-body">
      <% if @chart.pie_chart? %>
        <%= pie_chart chart_path(@chart, format: :json), id: "pie_chart_#{@chart.id}" %>
      <% elsif @chart.col_chart? %>
        <%= column_chart chart_path(@chart, format: :json), id: "col_chart_#{@chart.id}" %>
      <% elsif @chart.bar_chart? %>
        <%= bar_chart chart_path(@chart, format: :json), id: "bar_chart_#{@chart.id}" %>
      <% elsif @chart.line_chart? %>
        <%= line_chart chart_path(@chart, format: :json), id: "line_chart_#{@chart.id}", library: { :hAxis => {:format => "d-MMM-yy"}} %>
      <% end %>
      
      <div class="chart-author"><%= @chart.user.email %></div>
    
      <%= render 'layouts/share' %>

  </div>
</div>
