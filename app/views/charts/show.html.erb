<canvas id="canvas" style="display:none;"></canvas>

<div class = "row">
  <div class="col-sm-9 col-md-9 pull-left">
    
    <div class="thumbnail chart_container">
      <h2><%= @chart.name %></h2>
      <%= render @chart %>

      <div class = "caption">

        <div class="chart-about">
          <div class="chart-description">
            This is where the chart description goes
          </div>
          <div class="chart-dashboards">
            <% if @chart.dashboards.any? %>
              <% @chart.dashboards.each do |dashboard| %>
                <%= link_to dashboard.title, dashboard_path(dashboard.id) %>
              <% end %>
            <% end %>
          </div>
        </div>

        <div class= "chart-share"> 
          <div class = "chart-embed">
            Embed: <input name="widget" value="<iframe src='<%= chart_widget_url(@chart) %>' frameBorder='0'></iframe>" style="width: 40%;">
            <%= render 'layouts/share' %>
          </div>
        </div>

        <div class="chart-download btn-group">
          <button type="button" class="btn btn-success dropdown-toggle" data-toggle=" dropdown">
            <%= icon('fa fa-download') %>
            Download
            <span class="caret"></span>
          </button>

          <ul class="dropdown-menu" role="menu">
            <li><%= link_to ' PNG', '#', id: 'download-btn', data: { filename: @chart.name.parameterize + '.png' } %></li>
            <li><%= link_to ' CSV', chart_path(format: "csv"), id: 'download-csv-b',   download: @chart.name.parameterize + '.csv' %></li>
          </ul>
        </div>

        <div class="chart-admin">
          <%= link_to icon('fa fa-pencil') + ' Edit', edit_chart_path(@chart), class: ' btn btn-info', id: 'edit-btn' if @chart.user == current_user %>
          <%= link_to icon('fa fa-trash-o') + ' Delete', chart_path(@chart), method:    delete, class: 'btn btn-danger', id: 'delete-btn' if @chart.user == current_user %>
        </div>
      </div>
  </div>
</div>

  <div class="col-sm-3 col-md-3 pull-right">
    <div class = "thumbnail">
      <%= image_tag gravatar_url(@chart.user) %>
      <div class="caption">
        <h1><%= @chart.user.username %></h1>
        <p><%= @chart.user.bio %></p>
        <p><a href= "mailto:<%= @chart.user.email %>"><i class="fa fa-envelope">
              Contact</i></a></p>
      </div>
    </div>
  </div>
</div>
